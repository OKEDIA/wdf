rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
  	// For all folders within the bucket
  	match /{newFolder} {
    
    	// Allow the creation of a new folder if the user is authenticated
    	allow create: if request.auth != null;
    }
    
    // For files within folders
    match /{userFolder}/{allPaths=**} {
    	// Only allow access if the userID matches the userFolder name
      allow write: if request.auth != null && request.auth.uid == userFolder;
    	
      // Allow files to be got by public, required for Website Viewer
      allow get: if true;
    }
  }
}